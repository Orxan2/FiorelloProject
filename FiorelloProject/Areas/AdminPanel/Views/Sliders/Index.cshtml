@model IEnumerable<Slider>
    @{
    ViewData["Title"] = "Index";
    int Count = 1;
    }
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row">
                <div class="col-md-12 grid-margin">
                    <div class="card">
                        <div class="card-body">
                            <h1>Category</h1>
                            <h3><a asp-action="Create" class="btn btn-outline-success"><i class="fa fa-plus-square-o"></i></a> Create</h3>
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th># ID</th>
                                            <th>Image</th>
                                            <th class="text-center">Settings</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var slider in Model)
                                    {
                                        <tr>
                                            <td>@Count</td>
                                            <td><img src="~/img/@slider.ImagePath" style="width:100px;height:100px" /></td>
                                            <td>
                                                <ul class="list-unstyled d-flex justify-content-center align-items-center mb-0">
                                                    <li class="mx-2"><a asp-action="Update" asp-route-id="@slider.SliderId" class="btn btn-outline-warning" title="Update category"><i class="fa fa-refresh"></i></a></li>
                                                    <li class="mx-2"><a asp-action="Details" asp-route-id="@slider.SliderId" class="btn btn-outline-info" title="Review detail"><i class="fa fa-address-card"></i></a></li>
                                                    <li class="mx-2"><a asp-action="Delete" asp-route-id="@slider.SliderId" class="btn btn-outline-danger"><i class="fas fa-lock"></i></a></li>
                                                </ul>
                                            </td>
                                        </tr>
                                        Count++;
                                    }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </div>


