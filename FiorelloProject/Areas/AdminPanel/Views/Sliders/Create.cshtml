@model Slider
@{
    ViewData["Title"] = "Create";
}
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-12 grid-margin">
                <form enctype="multipart/form-data" class="forms-sample" method="post">
                    <div class="mb-3">
                        <input asp-for="Photo" accept="image/*" />
                        <span asp-validation-for="Photo" class="text-danger my-2 d-block"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Add To Slider</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section validation{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
}