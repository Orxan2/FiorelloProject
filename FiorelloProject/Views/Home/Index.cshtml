@model HomeViewModel
@{
    ViewData["Title"] = "Fiorello &#8211; A Flower Shop and Florist WooCommerce Theme";
}
    <!-- MAIN START -->
    <main>
        <!-- SLIDER START -->
        <section id="slider">
            <div class="owl-carousel slider">
                @foreach (var slider in Model.Sliders)
                {
                    <div> <img src="~/img/@slider.ImagePath" /> </div>
                }
            </div>
            <div class="container context pl-lg-5 ml-lg-3">
                <div class="row">
                    @foreach (var slogan in Model.Slogan)
                    {
                        <div class="col-lg-5">
                            <div class="text">
                                @Html.Raw(slogan.Title)
                                <p class="text-black-50 d-none d-sm-block">@slogan.Text</p>
                            </div>
                            <div class="img">
                                <img src="~/img/@slogan.Image" />
                            </div>
                        </div>
                    }
                </div>
            </div>
        </section>
        <!-- SLIDER END -->

        <!-- PRODUCTS START -->

        <section id="products">
            <div class="container">
                <div class="row pt-5">
                    <div class="col-12 d-flex justify-content-between">
                        <ul class="category-mobile d-md-none list-unstyled">
                            <li>
                                <a href="" class="categories mr-2">Categories</a>
                                <i class="fas fa-caret-down"></i>
                                <ul class="category list-unstyled" style="display: none;">
                                    <li><a href="" data-id="all">All</a></li>
                                    @foreach (var category in Model.Categories)
                                    {
                                        <li><a href="" data-id="@category.Title.ToLower()">@category.Title.ToUpper()</a></li>
                                    }
                                </ul>
                            </li>
                        </ul>
                        <ul class="category d-none d-md-flex list-unstyled">
                            <li><a href="" data-id="all">All</a></li>
                            @foreach (var category in Model.Categories)
                            {
                                <li><a href="" data-id="@category.Title.ToLower()">@category.Title.ToUpper()</a></li>
                            }
                        </ul>
                        <ul class="list-unstyled">
                            <li>
                                <a href="" class="mr-2">Filter</a>
                                <i class="fas fa-caret-down"></i>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="row">
                    @await Component.InvokeAsync("Product",12)                 
                </div>
            </div>
        </section>

        <!-- PRODUCTS END -->

        <!-- ABOUT START -->

        <section id="about">
            <div class="container py-5">
                <div class="row py-5">
                    @foreach (var about in Model.About)
                    {
                        <div class="col-lg-6">
                            <div class="img">
                                <img src="~/img/@about.Image" class="img-fluid" />
                                <div class="player position-absolute rounded-circle d-flex align-items-center justify-content-center">
                                    <i class="fas fa-play fa-lg"></i>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="about-text mt-5 mt-lg-0 px-lg-5">
                                @Html.Raw(about.Title)
                                <p class="py-3">@about.Text</p>
                                <ul class="list-unstyled">
                                    @foreach (var aboutList in Model.AboutLists)
                                    {
                                        <li class="mt-3"><img src="~/img/h1-custom-icon.png" class="mr-2" alt=""> @aboutList.ListItem</li>
                                    }                                   
                                </ul>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </section>

        <!-- ABOUT END -->
        <!-- EXPERTS START -->

        <section id="experts">
            <div class="container">
                <div class="row py-5">
                    <div class="offset-lg-3 col-lg-6">
                        <div class="section-title">
                            @foreach (var expertHeading in Model.ExpertHeading)
                            { 
                                <h1>@expertHeading.Title</h1>
                                <p class="text-black-50">@expertHeading.Text</p>
                            }
                        </div>
                    </div>
                </div>
                <div class="row pb-5">
                    @foreach (var expert in Model.Experts)
                    {
                        <div class="col-md-6 col-lg-3">
                            <div class="item text-center">
                                <div class="img">
                                    <img src="~/img/@expert.Image" class="img-fluid rounded-circle" />
                                </div>
                                <div class="text mt-3">
                                    <h6>@expert.Fullname.ToUpper()</h6>
                                    <p class="text-black-50">@expert.Profession.Name</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </section>

        <!-- EXPERTS END -->
        <!-- SUBSCRIBE START -->

        <section id="subscribe">
            <div class="container py-5">
                <div class="row py-5">
                    <div class="col-12">
                        <div class="content text-center py-5">
                            <h3>Join The Colorful Bunch!</h3>
                            <div class="form-group d-flex justify-content-center flex-wrap mt-5">
                                <input type="email" placeholder="Email Address" class="form-control-lg rounded-0">
                                <button class="btn btn-danger btn-lg rounded-0 px-5 mt-3 mt-sm-0">Subscribe</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- SUBSCRIBE END -->
        <!-- BLOG START -->

        <section id="blog">
            <div class="container">
                <div class="row py-5">
                    <div class="offset-lg-3 col-lg-6">
                        <div class="section-title">
                            @foreach (var blogHeading in Model.BlogHeading)
                            {
                                <h1>@blogHeading.Title</h1>
                                <p class="text-black-50">@blogHeading.Text</p>
                            }
                        </div>
                    </div>
                </div>
                <div class="row pb-5">
                    @foreach (var blog in Model.BlogCards)
                    {
                        <div class="col-md-6 col-lg-4">
                            <div class="item">
                                <div class="img position-relative">
                                    <img src="~/img/@blog.Image" class="img-fluid" alt="">
                                    <div class="date rounded bg-light position-absolute py-1 px-2">
                                        <span>@blog.Date.ToString("dd/MM/yyyy")</span>
                                    </div>
                                </div>
                                <div class="text mt-3 text-center px-5">
                                    <h5>@blog.Title</h5>
                                    <p class="text-black-50">@blog.Text</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </section>

        <!-- BLOG END -->
        <!-- SAY START -->

        <section id="say">
            <div class="container">
                <div class="row py-5 justify-content-center">
                    <div class="col-md-8 col-xl-6">
                        <div class="owl-carousel say">
                            @foreach (var expertSlider in Model.ExpertSliders)
                            {
                                <div>
                                    <div class="item text-center">
                                        <div class="img d-flex justify-content-center">
                                            <img src="~/img/@expertSlider.Image" />
                                        </div>
                                        <div class="text text-muted pt-3 pb-5">
                                            <i>@expertSlider.Text</i>
                                        </div>
                                        <div class="author">
                                            <h6>@expertSlider.Fullname.ToUpper()</h6>
                                            <p class="text-black-50">@expertSlider.Profession.Name</p>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- SAY END -->
        <!-- INSTAGRAM START -->

        <section id="instagram">
            <div class="owl-carousel instagram">
                @foreach (var photo in Model.InstagramPhotos)
                {
                    <div><img src="~/img/@photo.Photo" class="img-fluid" /></div>
                }
            </div>
            <div class="hastag bg-light text-muted py-2 px-3">
                #FIORELLO
            </div>
        </section>

        <!-- INSTAGRAM END -->

    </main>
    <!-- MAIN END -->