@model IEnumerable<ProductCategory>
@{
    ViewData["Title"] = "Index";
}

<!-- PRODUCTS START -->

<section id="products">
    <div class="container">      
        <div class="row" id="addHere">
            @foreach (var productCategory in Model)
            {
                <div class="col-sm-6 col-md-4 col-lg-3 mt-3">
                    <div class="product-item text-center">
                        <div class="img">
                            <a href="">
                                <img src="~/img/@productCategory.Product.Image" class="img-fluid" />
                            </a>
                        </div>
                        <div class="title mt-3">
                            <h6>@productCategory.Product.Title.ToUpper()</h6>
                        </div>
                        <div class="price">
                            <span class="text-black-50">Add to cart</span>
                            <span class="text-black-50">$@productCategory.Product.Price</span>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="row">
            <button class="btn btn-primary text-white fw-bold col-12" id="load">Load More...</button>
        </div>

    </div>
</section>

<!-- PRODUCTS END -->
